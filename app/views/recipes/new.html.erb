<h1>New Recipe</h1>
<form action="/recipes" method="post">
  <div>
    Title: <input type="text" name="input_title">
  </div>
  <div>
    Chef: <input type="text" name="input_chef">
  </div>
  <div>
    Prep time: <input type="text" name="input_prep_time">
  </div>
  <div>
    Ingredients: <input type="text" name="input_ingredients">
  </div>
  <div>
    Directions: <input type="text" name="input_directions">
  </div>
  <div>
    Image url: <input type="text" name="input_image_url">
  </div>
  <div>
    Choose a user:
    <select name="user_id">
      <% @users.each do |user| %>
        <option value="<%= user.id %>"><%= user.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="Create recipe">
</form>