<h1>Edit Recipe</h1>
<% if @recipe && @recipe.errors.any? %>
  <%= @recipe.errors.full_messages %>
<% end %>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    Title: <input type="text" name="input_title" value="<%= @recipe.title %>">
  </div>
  <div>
    Chef: <input type="text" name="input_chef" value="<%= @recipe.chef %>">
  </div>
  <div>
    Prep time: <input type="text" name="input_prep_time" value="<%= @recipe.prep_time %>">
  </div>
  <div>
    Ingredients: <input type="text" name="input_ingredients" value="<%= @recipe.ingredients %>">
  </div>
  <div>
    Directions: <input type="text" name="input_directions" value="<%= @recipe.directions %>">
  </div>
  <div>
    Image url: <input type="text" name="input_image_url" value="<%= @recipe.image_url %>">
  </div>
  <div>
    Choose a user:
    <select name="user_id">
      <% @users.each do |user| %>
        <option value="<%= user.id %>"><%= user.name %></option>
      <% end %>
    </select>
  </div>
  <input type="submit" value="Update recipe">
</form>